<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <div class="user-actions">
          <span class="profile-link">
            <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
          </span>
          <% if !current_user.friends?(user.id) && user.id != current_user.id %>
            <button class="btn btn-primary friendship-invitation"> Add Friend </button>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</section>
